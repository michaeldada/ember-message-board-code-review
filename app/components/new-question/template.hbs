<h3>Ask a Question!</h3>

<form id="newQuestion">
  <p>
    {{input value=author placeholder="Username"}}
    {{textarea value=content placeholder="Question" rows="10" cols="140"}}
    {{textarea value=notes placeholder="Additional Notes"}}
  </p>
  <p>
    <button {{action "createQuestion"}}>Ask!</button>
  </p>
</form>
